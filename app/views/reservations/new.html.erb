<%= form_with url: reservations_confirm_path do |f| %>
	<div class="card" style="width: 54rem;">
	<div class="card-header">予約画面</div>
	<ul class="list-group list-group-flush">
		<li class="list-group-item">
			<label for="name">料金</label>¥<%= @post.price %> /日
		</li>
		<li class="list-group-item">
			<label for="introduce">チェックイン</label><%= f.date_field :start_date %>
		</li>
		<li class="list-group-item">
			<label for="price">チェックアウト</label><%= f.date_field :end_date %>
		</li>
		<li class="list-group-item">
			<label for="address">人数</label><%= f.number_field :person %>
		</li>
		<li class="list-group-item">
			<%= f.submit "確認画面へ", class: "btn btn-sm btn-primary" %>
		</li>
	</ul>
</div>
<% end %>